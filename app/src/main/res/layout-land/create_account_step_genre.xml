<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.the.dionisio.apk.client.view.CreateAccountStepGenre"
    tools:showIn="@layout/bar_create_account_step_genre"
    tools:layout_editor_absoluteY="79dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardElectronics"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:onClick="checkCard"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/card_view"
            app:layout_constraintRight_toLeftOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="@+id/card_view">

            <ImageView
                android:id="@+id/imgCheckElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/imgElectronics"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:src="@drawable/ic_eletro" />

            <TextView
                android:id="@+id/txtElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/genreElectronics"
                android:textAlignment="center"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgElectronics"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardRock"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:onClick="checkCard"
        app:layout_constraintLeft_toRightOf="@+id/cardElectronics"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/card_view"
            app:layout_constraintRight_toLeftOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="@+id/card_view">

            <ImageView
                android:id="@+id/imgCheckRock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/imgRock"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:src="@drawable/ic_rock_02" />

            <TextView
                android:id="@+id/txtRock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Rock"
                android:textAlignment="center"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgRock"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSertanejo"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:onClick="checkCard"
        app:layout_constraintLeft_toRightOf="@+id/cardRock"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/card_view"
            app:layout_constraintRight_toLeftOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="@+id/card_view">

            <ImageView
                android:id="@+id/imgCheckSertanejo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/imgSertanejo"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:src="@drawable/ic_sertanejo" />

            <TextView
                android:id="@+id/txtSertanejo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Sertanejo"
                android:textAlignment="center"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgSertanejo"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPagode"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:onClick="checkCard"
        app:layout_constraintLeft_toRightOf="@+id/cardSertanejo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/card_view"
            app:layout_constraintRight_toLeftOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="@+id/card_view">

            <ImageView
                android:id="@+id/imgCheckPagode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/imgPagode"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:src="@drawable/ic_pagode" />

            <TextView
                android:id="@+id/txtPagode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Pagode"
                android:textAlignment="center"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgPagode"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/genreFinish"
        android:layout_width="598dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/genreFinish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardElectronics"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="215dp" />

</android.support.constraint.ConstraintLayout>
