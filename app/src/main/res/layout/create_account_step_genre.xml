<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.the.dionisio.apk.client.view.CreateAccountStepGenre"
    tools:showIn="@layout/bar_create_account_step_genre"
    tools:layout_editor_absoluteY="79dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/card_view"
            app:layout_constraintRight_toLeftOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="@+id/card_view">

            <ImageView
                android:id="@+id/thumbnail1"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:src="@drawable/ic_sertanejo" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Sertanejo"
                android:textAlignment="center"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

